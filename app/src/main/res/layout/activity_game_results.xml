<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanharvey.randomheroesgame.ui.GameResultsActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero 1"
            android:id="@+id/hero1ResultTextView"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero 2"
            android:id="@+id/hero2ResultTextView"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hero1ResultTextView"
            android:layout_toEndOf="@+id/hero1ResultTextView"
            android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero 3"
            android:id="@+id/hero3ResultTextView"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero 4"
            android:id="@+id/hero4ResultTextView"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hero3ResultTextView"
            android:layout_toEndOf="@+id/hero3ResultTextView"
            android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero 5"
            android:id="@+id/hero5ResultTextView"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
