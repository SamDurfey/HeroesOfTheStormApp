<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameOptionsActivity"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/centerPoint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:background="#eaeaea"
            android:layout_alignRight="@+id/centerPointTop"
            android:layout_alignEnd="@+id/centerPointTop"
            android:spinnerMode="dialog"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/centerPointTop"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner2"
            android:padding="6dp"
            android:background="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/heroSpinner1"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner3"
            android:padding="6dp"
            android:background="#eaeaea"
            android:layout_below="@+id/heroSpinner1"
            android:layout_toLeftOf="@+id/heroSpinner2"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner4"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:layout_below="@+id/heroSpinner1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/heroSpinner1"
            android:layout_toEndOf="@+id/heroSpinner1"
            android:textAlignment="center" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner5"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_below="@+id/heroSpinner3"
            android:layout_alignRight="@+id/heroSpinner4"
            android:layout_alignEnd="@+id/heroSpinner4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team A"
            android:id="@+id/teamATextView"
            android:layout_below="@+id/centerPointTop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/heroSpinner4"
            android:layout_alignEnd="@+id/heroSpinner4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#eaeaea"
            android:layout_marginTop="10dp"
            android:textSize="30dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/mapSelectSpinner"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/centerPointTop"
            android:layout_toEndOf="@+id/centerPointTop" />

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/centerPoint"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/centerPoint"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/centerPointBottom"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner9"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_alignTop="@+id/heroSpinner10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/centerPointBottom"
            android:layout_alignEnd="@+id/centerPointBottom" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner10"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_below="@+id/heroSpinner7"
            android:layout_alignLeft="@+id/centerPointBottom"
            android:layout_alignStart="@+id/centerPointBottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner7"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_alignTop="@+id/heroSpinner8"
            android:layout_alignRight="@+id/centerPointBottom"
            android:layout_alignEnd="@+id/centerPointBottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner8"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_below="@+id/heroSpinner6"
            android:layout_alignLeft="@+id/centerPointBottom"
            android:layout_alignStart="@+id/centerPointBottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/heroSpinner6"
            android:padding="6dp"
            android:background="#eaeaea"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:layout_below="@+id/teamBTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team B"
            android:id="@+id/teamBTextView"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#eaeaea"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submitButton"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mapSelectSpinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
