<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ryanharvey.randomheroesgame.ui.GameDescriptionActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:text="Game Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gameGeneratorTitleTextView"
        android:textColor="@color/offWhite"
        android:textSize="24sp"
        android:layout_marginTop="70dp" />

    <TextView
        android:text="@string/description_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDescription1TextView"
        android:textColor="@color/offWhite"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/gameGeneratorTitleTextView"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/gameGeneratorTitleTextView"
        android:layout_alignStart="@+id/gameGeneratorTitleTextView"
        android:layout_alignRight="@+id/gameGeneratorTitleTextView"
        android:layout_alignEnd="@+id/gameGeneratorTitleTextView" />

    <TextView
        android:text="@string/description_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDescription2TextView"
        android:textColor="@color/offWhite"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/gameDescription1TextView"
        android:layout_alignLeft="@+id/gameDescription1TextView"
        android:layout_alignStart="@+id/gameDescription1TextView"
        android:layout_alignRight="@+id/gameDescription1TextView"
        android:layout_alignEnd="@+id/gameDescription1TextView"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/description_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDescription3TextView"
        android:textColor="@color/offWhite"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/gameDescription2TextView"
        android:layout_alignLeft="@+id/gameDescription2TextView"
        android:layout_alignStart="@+id/gameDescription2TextView"
        android:layout_alignRight="@+id/gameDescription2TextView"
        android:layout_alignEnd="@+id/gameDescription2TextView"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDescription3TextView"
        android:id="@+id/gameDescriptionContinueButton"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/gameDescription3TextView"
        android:layout_alignEnd="@+id/gameDescription3TextView"
        android:layout_alignLeft="@+id/gameDescription3TextView"
        android:layout_alignStart="@+id/gameDescription3TextView"
        android:background="@color/colorAccent"
        android:textColor="@color/bone" />
</RelativeLayout>
