<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryanharvey.randomheroesgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MMRInputActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.MMRResultsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.GameOptionsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.GameResultsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.GameDescriptionActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>